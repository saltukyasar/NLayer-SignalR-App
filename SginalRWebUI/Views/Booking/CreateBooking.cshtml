@model CreateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Category</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">

						<div class="card-header">
							<div class="card-title">New Reservation</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="name">Name</label>
								<input type="text" class="form-control" asp-for="Name" id="Name">
							</div>

						</div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Phone">Phone</label>
                                <input type="text" class="form-control" asp-for="Phone" id="Phone">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Mail">Mail</label>
                                <input type="email" class="form-control" asp-for="Mail" id="Mail">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="PersonCount">number of Person</label>
                                <input type="number" class="form-control" asp-for="PersonCount" id="PersonCount">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Date">Date</label>
                                <input type="date" class="form-control" asp-for="Date" id="Date">
                            </div>
                        </div>
						<div class="card-action">
							<button class="btn btn-primary">Submit</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

