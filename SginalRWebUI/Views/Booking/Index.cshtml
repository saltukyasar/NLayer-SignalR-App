@model List<ResultBookingDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Reservations</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Reservation List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Reservation Operations
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Name Surname</th>
									<th scope="col">Tel</th>
									<th scope="col">Number of person</th>
									<th scope="col">Reservation status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Name</td>
										<td>@item.Phone</td>
										<td>@item.PersonCount</td>
										<td>Reservation created</td>
										<td><a href="/Booking/DeleteBooking/@item.BookingID" class="btn btn-outline-danger">Delete</td>
										<td><a href="/Booking/UpdateBooking/@item.BookingID" class="btn btn-outline-success">Update</td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Booking/CreateBooking/" class="btn btn-outline-primary">Add New Reservation</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

