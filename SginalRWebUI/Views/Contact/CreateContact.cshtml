@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Contact Operations</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">New Contact</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Location">Location </label>
                                <input type="text" class="form-control" asp-for="Location" id="Location">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Phone">Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone" id="Phone">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Mail">Mail</label>
                                <input type="email" class="form-control" asp-for="Mail" id="Mail">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Sub Title</label>
                                <input type="text" class="form-control" asp-for="FooterTitle" id="title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="OpenDays">Open Days</label>
                                <input type="text" class="form-control" asp-for="OpenDays" id="OpenDays">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="OpenDaysDescription">OpenDaysDescription</label>
                                <input type="text" class="form-control" asp-for="OpenDaysDescription" id="OpenDaysDescription">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="OpenHours">Open Hours</label>
                                <input type="text" class="form-control" asp-for="OpenHours" id="OpenHours">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Sub Title Description</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription" id="Description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Contact Information</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
